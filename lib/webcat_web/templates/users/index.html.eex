<section class="section">
    <div class="container">
        <h1 class="title">Dashboard</h1>
        <div class="columns">
            <div class="column is-one-fifth">
                <%= render(WebCATWeb.SharedView, "menu.html", conn: @conn, selected: :rotation_groups) %>
            </div>
            <div class="column">
                <div class="box">
                    <div class="level">
                        <div class="level-left">
                            <div class="level-item">
                                <h2 class="subtitle">
                                    Users
                                </h2>
                            </div>
                        </div>
                        <div class="level-right">
                            <div class="level-item">
                                <%= icon_button("New", "plus", to: Routes.rotation_groups_path(@conn, :new), class: "is-primary") %>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <%= render(WebCATWeb.CRUDView, "table.html", conn: @conn, data: Enum.map(@users, &clean_user/1), route_function: &Routes.users_path/3, keys: ~w(id username first_name last_name)a) %>
                </div>
            </div>
        </div>
    </div>
</section>