{
    "repository": {},
    "license": "ISC",
    "sideEffects": false,
    "scripts": {
        "build:dev": "NODE_ENV=development parcel build index.html -d ../priv/static/ --no-minify --public-url ../static/",
        "build": "parcel build index.html --no-source-maps -d ../priv/static/ --public-url ../static/",
        "start": "parcel index.html",
        "watch": "parcel watch index.html -d ../priv/static --public-url ../static/",
        "elm": "elm make src/Main.elm --output=/dev/null",
        "format": "elm-format src/ tests/ --yes --elm-version 0.19",
        "test:full": "elm-format --validate . && elm-test",
        "test": "elm-test"
    },
    "dependencies": {
        "@fortawesome/fontawesome-pro": "5.4.1",
        "bootstrap": "^4.3.1",
        "jquery": "^3.4.1",
        "phoenix": "file:../deps/phoenix",
        "selectize": "^0.12.6",
        "simplemde": "^1.11.2"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-0",
        "@babel/plugin-transform-modules-commonjs": "^7.6.0",
        "@babel/preset-env": "^7.6.2",
        "autoprefixer": "^9.6.1",
        "elm": "0.19.0-no-deps",
        "elm-hot": "^1.1.2",
        "elm-test": "0.19.0-rev6",
        "parcel-bundler": "^1.12.3",
        "parcel-plugin-purgecss": "^2.1.2",
        "parcel-plugin-static-files-copy": "^2.2.1",
        "parcel-plugin-subresource-integrity": "^0.3.1",
        "sass": "^1.23.0"
    },
    "optionalDependencies": {
        "elm-format": "0.8.1"
    },
    "staticFiles": {
        "staticPath": "static",
        "watcherGlob": "**"
    }
}
